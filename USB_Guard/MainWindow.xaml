<Window x:Class="USB_Guard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="USB Guard - Professional USB Security" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="1100" MinHeight="700"
        WindowState="Maximized">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1A1A" Offset="0"/>
            <GradientStop Color="#2D2D30" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Modern Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0078D4" Offset="0"/>
            <GradientStop Color="#106EBE" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A1A" Offset="0"/>
            <GradientStop Color="#2D2D30" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#333337" Offset="0"/>
            <GradientStop Color="#2D2D30" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Styles -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,18"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               Padding="{TemplateBinding Padding}"
                               CornerRadius="8"
                               Margin="10,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3F3F46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonSelected" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="6" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1084D4" Offset="0"/>
                                            <GradientStop Color="#2094E4" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernActionButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#D13438" Offset="0"/>
                        <GradientStop Color="#E11D48" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#B02A30" Offset="0"/>
                                <GradientStop Color="#DC2626" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="4" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI Card Style -->
        <Style x:Key="KpiCard" TargetType="Border" BasedOn="{StaticResource ModernCard}">
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#3A3A3E" Offset="0"/>
                                <GradientStop Color="#333337" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#2A2A2E"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#404040"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F46"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource DarkGradient}" BorderBrush="#404040" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo/Title -->
                <Border Background="{StaticResource PrimaryGradient}" Padding="25,30">
                    <StackPanel>
                        <TextBlock Text="🛡️ USB Guard" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Professional Security Suite" FontSize="12" Foreground="#B0D4F1" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Margin="0,25,0,0">
                    <Button x:Name="NavDashboard" Content="📊  Dashboard" Style="{StaticResource SidebarButtonSelected}" Click="NavDashboard_Click"/>
                    <Button x:Name="NavMonitor" Content="🔍  Monitor" Style="{StaticResource SidebarButton}" Click="NavMonitor_Click"/>
                    <Button x:Name="NavLogs" Content="📋  Security Logs" Style="{StaticResource SidebarButton}" Click="NavLogs_Click"/>
                </StackPanel>

                <!-- Status Panel -->
                <Border Style="{StaticResource ModernCard}" Margin="15,40,15,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Protection Status" FontWeight="Bold" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="ProtectionStatusText" Text="ACTIVE" Foreground="LimeGreen" FontWeight="Bold" FontSize="16" Margin="0,8,0,0"/>
                        
                        <!-- Zero-Trust Mode Controls -->
                        <TextBlock Text="🛡️ Zero-Trust Mode" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,20,0,8"/>
                        <StackPanel x:Name="ZeroTrustPanel">
                            <Button x:Name="EnableZeroTrustButton" Content="🛡️ Enable Zero-Trust" 
                                   Style="{StaticResource ModernActionButton}" 
                                   Click="EnableZeroTrust_Click" 
                                   Margin="0,0,0,8" 
                                   FontSize="12" 
                                   Padding="15,8"/>
                            <Button x:Name="DisableZeroTrustButton" Content="🔓 Disable Zero-Trust" 
                                   Style="{StaticResource DangerButton}" 
                                   Click="DisableZeroTrust_Click" 
                                   Visibility="Collapsed" 
                                   FontSize="12" 
                                   Padding="15,8"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="ZeroTrustStatusText" 
                                   Text="Status: Not Active" 
                                   Foreground="#E0E0E0" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>
                        
                        <!-- Fortress Mode Controls -->
                        <TextBlock Text="Fortress Mode" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,20,0,8"/>
                        <StackPanel x:Name="FortressModePanel">
                            <Button x:Name="EnableFortressModeButton" Content="🏰 Enable Fortress" 
                                   Style="{StaticResource ModernActionButton}" 
                                   Click="EnableFortressMode_Click" 
                                   Margin="0,0,0,8" 
                                   FontSize="12" 
                                   Padding="15,8"/>
                            <Button x:Name="DisableFortressModeButton" Content="🔓 Disable Fortress" 
                                   Style="{StaticResource DangerButton}" 
                                   Click="DisableFortressMode_Click" 
                                   Visibility="Collapsed" 
                                   FontSize="12" 
                                   Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="{StaticResource DarkGradient}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Panels -->
            
            <!-- Dashboard Panel -->
            <ScrollViewer x:Name="DashboardPanel" Grid.Row="0" Margin="35" Visibility="Visible" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Security Dashboard" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,25"/>
                    
                    <!-- KPI Cards -->
                    <UniformGrid Columns="4" Margin="0,0,0,35">
                        <Border Style="{StaticResource KpiCard}">
                            <StackPanel>
                                <TextBlock Text="{Binding ConnectedCount}" FontSize="36" FontWeight="Bold" Foreground="#4FC3F7" HorizontalAlignment="Center"/>
                                <TextBlock Text="Connected Devices" FontSize="13" Foreground="#CCCCCC" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource KpiCard}">
                            <StackPanel>
                                <TextBlock Text="{Binding QuarantinedCount}" FontSize="36" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                <TextBlock Text="Quarantined" FontSize="13" Foreground="#CCCCCC" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource KpiCard}">
                            <StackPanel>
                                <TextBlock Text="{Binding BlockedCount}" FontSize="36" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                                <TextBlock Text="Blocked Threats" FontSize="13" Foreground="#CCCCCC" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource KpiCard}">
                            <StackPanel>
                                <TextBlock Text="🛡️" FontSize="36" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                <TextBlock Text="System Protected" FontSize="13" Foreground="#CCCCCC" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Recent Security Events -->
                    <TextBlock Text="Recent Security Events" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,18"/>
                    <Border Style="{StaticResource ModernCard}" Padding="20" Height="350">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="RecentEventsListBox" ItemsSource="{Binding RecentEvents}" 
                                    Background="Transparent" BorderThickness="0" Foreground="White">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3A3A3E" CornerRadius="6" Padding="15,10" Margin="0,3">
                                            <StackPanel>
                                                <TextBlock FontWeight="Bold" FontSize="13">
                                                    <Run Text="{Binding FormattedTimestamp, Mode=OneWay}" Foreground="#B0B0B0"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding EventType}" Foreground="#4FC3F7"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Details}" Foreground="White" Margin="0,3,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Monitor Panel -->
            <ScrollViewer x:Name="MonitorPanel" Grid.Row="0" Margin="35" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Device Monitor" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,25"/>
                    
                    <!-- Device Actions -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="🟢 Allow Device" Style="{StaticResource ModernActionButton}" Click="AllowDevice_Click" Margin="0,0,15,0"/>
                        <Button Content="🔴 Block Device" Style="{StaticResource DangerButton}" Click="BlockDevice_Click"/>
                    </StackPanel>

                    <!-- Connected Devices -->
                    <TextBlock Text="Connected USB Devices" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <Border Style="{StaticResource ModernCard}" Padding="20">
                        <DataGrid x:Name="DevicesDataGrid" ItemsSource="{Binding ConnectedDevices}" 
                                 Style="{StaticResource ModernDataGrid}" Height="500">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Device Name" Binding="{Binding Name}" Width="280"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="140"/>
                                <DataGridTextColumn Header="VID" Binding="{Binding VendorId}" Width="80"/>
                                <DataGridTextColumn Header="PID" Binding="{Binding ProductId}" Width="80"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="130">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Connected" Binding="{Binding ConnectedTimeDisplay}" Width="100"/>
                                <DataGridTextColumn Header="Auth Status" Binding="{Binding AuthenticationStatus}" Width="130"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Logs Panel -->
            <ScrollViewer x:Name="LogsPanel" Grid.Row="0" Margin="35" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid Margin="0,0,0,25">
                        <TextBlock Text="Device Connection Logs" FontSize="32" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="DownloadLogsButton" 
                                Content="💾 Download Logs" 
                                Style="{StaticResource ModernActionButton}" 
                                Click="DownloadLogs_Click" 
                                HorizontalAlignment="Right"
                                Padding="20,10"/>
                    </Grid>
                    
                    <!-- Simplified Log Display -->
                    <Border Style="{StaticResource ModernCard}" Padding="25">
                        <StackPanel>
                            <TextBlock Text="Recent Device Activity" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#4FC3F7" 
                                      Margin="0,0,0,15"/>
                            
                            <ScrollViewer Height="550" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="DeviceLogsItemsControl" Background="Transparent">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2A2A2E" 
                                                   CornerRadius="8" 
                                                   Padding="18,12" 
                                                   Margin="0,0,0,10"
                                                   BorderBrush="#404040"
                                                   BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="140"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                              Text="{Binding Timestamp, StringFormat='{}{0:MM/dd HH:mm:ss}'}" 
                                                              FontFamily="Consolas"
                                                              FontSize="12" 
                                                              Foreground="#B0B0B0"
                                                              VerticalAlignment="Center"/>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                        <TextBlock FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4">
                                                            <Run Text="{Binding DeviceIcon}" FontSize="14"/>
                                                            <Run Text="{Binding DeviceName}" Foreground="White"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding Action}" 
                                                                  Foreground="{Binding ActionColor}" 
                                                                  FontSize="12"
                                                                  FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding Details}" 
                                                                  Foreground="#CCCCCC" 
                                                                  FontSize="11"
                                                                  Margin="0,3,0,0"
                                                                  TextWrapping="Wrap"
                                                                  Visibility="{Binding HasDetails}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <TextBlock Text="💡 Only device connection, disconnection, and authentication events are shown" 
                                      FontSize="11" 
                                      Foreground="#808080" 
                                      Margin="0,15,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="1" Background="#252526" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="20,10">
                <Grid>
                    <TextBlock x:Name="StatusBarText" Text="USB Guard Ready - Real-time protection active" 
                              Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="🟢" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="System Protected" Foreground="LimeGreen" FontWeight="Bold" Margin="0,0,20,0"/>
                        <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='Last Updated: {0:HH:mm:ss}'}" 
                                  Foreground="#CCCCCC" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>