<Window x:Class="USB_Guard.Dialogs.HIDAuthenticationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HID Device Authentication - USB Guard" 
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#F0F0F0">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="🔌 HID Device Authentication" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Behavioral analysis completed - Review security assessment" 
                           FontSize="12" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Device Information -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Device Name:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DeviceNameText" Text="[Device Name]" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DeviceTypeText" Text="[Device Type]" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Vendor ID:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="VendorIdText" Text="[VID]" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Product ID:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ProductIdText" Text="[PID]"/>
            </Grid>
        </Border>

        <!-- Analysis Results -->
        <Border Grid.Row="2" x:Name="AnalysisPanel" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="[Analysis Status]" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Behavior Score -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Behavior Score" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BehaviorScoreText" Text="[Score]" FontSize="32" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <ProgressBar x:Name="ScoreProgressBar" Height="8" Minimum="0" Maximum="100" 
                                     Margin="10,5,10,0"/>
                    </StackPanel>

                    <!-- Analysis Details -->
                    <StackPanel Grid.Column="1" Margin="20,0">
                        <TextBlock Text="Analysis Details:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border Background="White" CornerRadius="5" Padding="10" BorderBrush="#DDD" BorderThickness="1">
                            <TextBlock x:Name="AnalysisDetailsText" Text="[Analysis Details]" 
                                       TextWrapping="Wrap" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <!-- Security Level -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Security Level" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SecurityLevel" Text="[Level]" FontSize="14" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Warning Panel (for suspicious devices) -->
        <Border Grid.Row="3" x:Name="WarningPanel" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="⚠️ SECURITY WARNING" FontSize="14" FontWeight="Bold" 
                           Foreground="#D32F2F" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="This HID device exhibits suspicious behavior patterns that may indicate:" 
                           FontWeight="SemiBold" Foreground="#D32F2F" TextWrapping="Wrap"/>
                <TextBlock Text="• Potential keystroke injection attempts
• Unusual device communication patterns  
• Possible BadUSB or Rubber Ducky attack device
• Spoofed or modified device firmware" 
                           FontSize="12" Foreground="#B71C1C" Margin="0,5,0,10" TextWrapping="Wrap"/>
                <TextBlock Text="RECOMMENDATION: Block this device or use sandbox mode only." 
                           FontWeight="Bold" Foreground="#D32F2F" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Recommendation -->
        <Border Grid.Row="4" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Recommended Action:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock x:Name="RecommendationText" Text="[Recommendation]" 
                           FontWeight="SemiBold" TextWrapping="Wrap"/>
                <TextBlock Text="• Normal Mode: Full system access (only for trusted, low-risk devices)
• Sandbox Mode: Isolated access with monitoring (recommended for unknown devices)
• Block: Prevent all access (recommended for high-risk or suspicious devices)" 
                           FontSize="11" Foreground="#666" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Technical Details -->
        <Border Grid.Row="5" Background="#F8F8F8" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Technical Information:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="• HID behavior analysis examines device communication patterns
• Checks for rapid keystroke sequences (Rubber Ducky indicators)
• Monitors for unusual device descriptors or capabilities
• Compares against known attack device signatures
• Scoring: 80-100 (Safe), 60-79 (Caution), 0-59 (Suspicious)" 
                           FontSize="11" Foreground="#555" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Timer -->
        <Border Grid.Row="6" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <TextBlock x:Name="TimerText" Text="Time remaining: 45 seconds" 
                       FontSize="16" FontWeight="SemiBold" 
                       HorizontalAlignment="Center" Foreground="#D32F2F"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AllowButton" Content="✓ Allow Normal Access" 
                    Background="#4CAF50" Foreground="White"
                    Style="{StaticResource ModernButton}" 
                    Click="AllowButton_Click" Margin="0,0,10,0"/>
                    
            <Button x:Name="AllowSandboxButton" Content="🛡️ Allow in Sandbox" 
                    Background="#FF9800" Foreground="White"
                    Style="{StaticResource ModernButton}" 
                    Click="AllowSandboxButton_Click" Margin="0,0,10,0"/>
                    
            <Button x:Name="ReanalyzeButton" Content="🔄 Re-analyze" 
                    Background="#2196F3" Foreground="White"
                    Style="{StaticResource ModernButton}" 
                    Click="ReanalyzeButton_Click" Margin="0,0,10,0"/>
                    
            <Button x:Name="BlockButton" Content="✗ Block Device" 
                    Background="#F44336" Foreground="White"
                    Style="{StaticResource ModernButton}" 
                    Click="BlockButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
